  <style>
    :root{
      --scrollbarBG: #fff;
  --thumbBG: rgb(139, 168, 255);
    }
    
    *{
      margin: 0;
      padding: 0;
      font-family: "gilroy";
      box-sizing: border-box;
    }
    html,
    body{
      height: 100%;
      width: 100%;
      
    }

    #main{
      height: 100%;
      width: 100%;
      overflow: hidden;
      /* background-color: #dadada; */
      
    }

    #msg{
      position: relative;
      padding: 2VW;
      width: 100%;
      height: 85vh;
      overflow-y: auto;
      /* padding-bottom: 100px; */
      /* scrollbar-width: thin; */
  /* scrollbar-color: var(--thumbBG) var(--scrollbarBG); */
      

    }
    #msg::-webkit-scrollbar{
      width: 15px;

    }

    #msg::-webkit-scrollbar-track{
      background: var(--scrollbarBG);

    }
    #msg::-webkit-scrollbar-thumb{
      background-color: var(--thumbBG) ;
  border-radius: 30px;
  border: 4px solid var(--scrollbarBG);

    }
    textarea{
      padding: 10px;
      width: 100%;
      height: 8%;
      resize: none;
      font-size: 1.2vw;
      outline: none;
      border: 1px solid #dadada;
    }

    button{
      width: 100%;
      height: 8%;
      margin-top: -5px;
      background-color: royalblue;
      color: white;
      border: none;
      outline: none;
    }

    .msg{
      width: fit-content;
      padding: 10px 30px;
      background-color: royalblue;
      color: white;
      font-size: 20px;
      border-radius: 100px;
      margin-top: 10px;
      overflow-wrap: break-word;


    }

    .typing{
      position: absolute;
      bottom: 2%;
      left: 50%;
      transform: translate(-50%,-50%);
      opacity: 0;
      font-style: italic;
      pointer-events: none;
      transition: 0.7s cubic-bezier(0.19, 1, 0.22, 1);

    }
    #fixed{
      position: fixed;
      height: 100%;
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2vw;
      z-index: 999;
      background-color: rgba(0, 0, 0, 0.37);
    }
    #card{
      display: flex;
      flex-direction: column;
      background-color: red;
      border-radius: 10px;
      overflow: hidden;
      width: 20vw;
      height: 15vh;
    }
    #card button{
      padding: 12px 10px;
      height: 45%;

    }
    #topright{
      position: absolute;
      top: 5%;
      right: 5%;
      display: none;
    }
    input{
      padding: 12px 20px;
      outline: none;
      border: 1px solid #dadada;
      height: 60%;
      font-size: 1vw;
      text-transform: capitalize;
    }
    .user h1{
      text-transform: capitalize;
    }
    .user{
      display: flex;
      align-items: center;
      gap: 20px;
    }
    .onlineusers{
      position: relative;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 10px;
      border: 1px solid #dadada;
      padding: 5px 10px;
      border-radius: 20px;
      font-weight: 600;
    }
    
    .onlineusers i{
      color: rgb(66, 201, 106);
      font-size: 30px;
    }

    .dialogue{
      position: absolute;
      right: 0%;
      top: 50px;
      width: 200px;
      height: fit-content;
      padding: 15px 20px;
      background-color: white;
      max-height: 250px;
      overflow: auto;
      border: 1px solid #dadada;
      transform-origin: 85% 0%;
      scale: 0;
      transition: 1s cubic-bezier(0.19, 1, 0.22, 1);
    }
    .dialogue::-webkit-scrollbar{
      width: 10px;
    }
    .dialogue::-webkit-scrollbar-thumb{
      background-color: #dadada;
      border: 3px solid #fff;
      border-radius: 30px;
    }
    .dialogue::-webkit-scrollbar-track{
      background-color: #fff;
    }

    .user{
      display: flex;
      justify-content: space-around;
      padding: 10px 0;
      border-bottom: 1px solid #e9e9e9;
    }
    .user small a{
      text-decoration: none;
      color: black;
    }
    #msgcard {
      position: relative;
      display: flex;
      flex-direction: column;
      width: fit-content;
      margin-top: 10px;
    }
    #msgcard .name{
      color: rgb(54, 199, 98);
      margin-left: 10px;
      text-transform: capitalize;
      margin-top: 10px;
      
    }
    #msgcard .message{
      width: 100px ;
      /* background-color: red; */
      color: rgb(83, 201, 119);

      font-size: 1.5vw;
    }
  </style>
</head>
