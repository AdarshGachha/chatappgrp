    </div>`
     document.querySelector("#msg").innerHTML = clutter;

     var elem = document.querySelector('#msg');
         elem.scrollTop = elem.scrollHeight;

    })



    var flag = 0 ;
    document.querySelector(".onlineusers").addEventListener("click",function(){
      if(flag === 0){
      document.querySelector(".dialogue").style.scale = 1

      flag = 1;
      }
      else{
      document.querySelector(".dialogue").style.scale = 0
      flag = 0;

      }
    })


    document.querySelector("#setname").addEventListener("click",function(){
      var inp = document.querySelector("input");
      if(inp.value.trim().length  > 0){
        username = inp.value;
        document.querySelector("#username").textContent = username;
        document.querySelector("#topright").style.display = "flex";

        document.querySelector("#fixed").style.display = "none";

        socket.emit("nameset",username);

      }

      

    })

