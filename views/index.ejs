  <script>
    var socket = io();
    var textarea = document.querySelector("textarea");
    var usrername = undefined;

    socket.on("online",function(data){
      document.querySelector("#onlinenumber").textContent = data.length;

      var clutter1 = "";
      data.forEach(function(elem){
        clutter1 += `<div class="user">
            <small><a href="">${elem}</a></small>
          </div>`;

      });
      document.querySelector(".dialogue").innerHTML = clutter1;

      

    })


    document.querySelector("#send").addEventListener("click",function(){
      if(textarea.value.trim().length > 0){
        socket.emit("msg",{username: username , msgvalue : textarea.value});
      document.querySelector("textarea").value ="";

      }
    })


    document.querySelector("textarea").addEventListener("input",function(){
      socket.emit("typing")
    })

    var timer;
    socket.on("typing",function(){
      document.querySelector(".typing").style.opacity = 0.3;
      clearTimeout(timer);

      timer =  setTimeout(function(){
